{
  "name": "flash-repo-vscode",
  "displayName": "Flash Repo Snapshot",
  "description": "Quickly concatenate and analyze repository contents",
  "version": "2.0.5",
  "publisher": "conscious-robot",
  "pricing": "Trial",
  "private": false,
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/Talamantez/flash-repo-vscode"
  },
  "galleryBanner": {
    "color": "#2F3437",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "keywords": [
    "repository",
    "concatenate",
    "files",
    "analysis",
    "claude",
    "ai",
    "assistant",
    "anthropic",
    "code",
    "documentation",
    "productivity",
    "claudeai"
  ],
  "activationEvents": [
    "onCommand:flash-repo.concatenate"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "verify": "pnpm run build && pnpm run test",
    "vscode:prepublish": "pnpm run verify",
    "watch": "node esbuild.js --watch",
    "package": "pnpm run verify && vsce package",
    "publish": "pnpm run verify && vsce publish",
    "pretest": "pnpm run build && pnpm run compile-tests",
    "test": "xvfb-run --auto-servernum --server-args='-screen 0 1024x768x24' node --force-node-api-uncaught-exceptions-policy=true ./out/test/runTest.js",
    "compile-tests": "tsc -p ./tsconfig.test.json",
    "watch-tests": "tsc -p ./tsconfig.test.json --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.38.0",
    "glob": "^10.2.2",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "contributes": {
    "commands": [
      {
        "command": "flash-repo.concatenate",
        "title": "Flash Repo: Concatenate Repository Files"
      }
    ],
    "configuration": {
      "title": "Flash Repo",
      "properties": {
        "flash-repo.excludedDirectories": {
          "type": "array",
          "default": [
            ".git",
            "node_modules",
            "dist",
            "build"
          ],
          "description": "Directories to exclude from concatenation",
          "items": {
            "type": "string"
          }
        },
        "flash-repo.excludedFiles": {
          "type": "array",
          "default": [
            "package-lock.json",
            "yarn.lock"
          ],
          "description": "Files to exclude from concatenation",
          "items": {
            "type": "string"
          }
        },
        "flash-repo.includedExtensions": {
          "type": "array",
          "default": [
            ".ts",
            ".js",
            ".py",
            ".java",
            ".cpp",
            ".h",
            ".jsx",
            ".tsx"
          ],
          "description": "File extensions to include in concatenation",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
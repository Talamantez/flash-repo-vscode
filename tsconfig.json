{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",
      "outDir": "dist",
      "rootDir": "src",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "lib": ["ES2020"],
      "baseUrl": "."
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "examples",
      "deno",
      ".vscode-test",
      "dist"
    ]
  }